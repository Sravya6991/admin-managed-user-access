<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">    
    <link rel="stylesheet" href="/styles/account.css" />
    <title>Admin Dashboard</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<body>
    <main class="d-flex flex-row">
        <section class="logo w-50">
            <div class="wrapper">
                <h2 class="text-light">Create User</h2>
                <form method="POST" action="/admin/dashboard">
                    <input class="form-control mb-3" type="number" name="userId" placeholder="User ID" required/>
                    <input class="form-control mb-3" type="password" name="password" placeholder="Password" required/>
                    <button class="btn btn-primary w-50" id="submitBtn">Create User</button>
                </form>
            </div>
        </section>
        <section class="account w-50 text-center">
            <h3 class="mb-4">View User Access</h3>
            <% if(viewData) { %>
                <% viewData.forEach((ele, index) => { %>
                    <% if(ele.is_confirmed === false) { %>
                        <div class="uid bg-primary-subtle w-50">
                            <div class="rounded-pill bg-primary pill"><%= index+1 %></div>
                            <p class="form-control m-1">
                                <%= ele.u_id %>
                            </p>
                        </div>
                    <% } %>
                <% }) %>
                <a href="/admin/confirmation" class="btn btn-primary w-25">View</a>
            <% } else { %>
                <%= null %>
            <% } %>        
        </section>
    </main>
</body>
</html>