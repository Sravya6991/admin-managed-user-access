<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">    
    <link rel="stylsheet" href="/styles/account.css" />
    <title>Admin confirmation</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<body>
    <main class="container">
        <h2 class="text-center text-primary my-2">Users Table</h2>
        <table class="table table-bordered text-center">
            <thead class="table-light">
                <tr>
                    <th>UserId</th>
                    <th>User Name</th>
                    <th>Avatar</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="rowdata">
                <% data.forEach(ele => { %>
                    <tr>
                        <td>
                            <p><%= ele.u_id %></p>
                        </td>
                        <td>
                            <p><%= ele.username %></p>
                        </td>
                        <td>
                            <img src="<%=ele.avatar.path%>" alt="user avatar" width="100px" />
                        </td>
                        <td>
                            <button class="btn btn-success done" id="done-<%= ele.u_id %>">Done</button>
                            <button class="btn btn-danger delete" id="delete-<%= ele.u_id %>">Delete</button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>

    <script src="/js/actionButtons.js"></script>
</body>
</html>